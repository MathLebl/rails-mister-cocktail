<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dpldqcrud/image/upload/c_fill,w_640/v1582291007/lwoztkze7j9fctrx9gax.jpg);">
  <div class="container">
    <h1><%= @cocktail.name  %></h1>
  </div>
  <div class="d-flex align-items-end justify-content-end">
  <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="fa fa-plus"></i> Dose
  <% end %>
</div>
</div>
<div class="recipe d-flex justify-content-center">
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= link_to "x", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  <% end %>
  </li>
</ul>
</div>


